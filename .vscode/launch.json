	"version": "0.2.0",
	"configurations": [
		{
			"name": "Train",
			"type": "python",
			"request": "launch",
			"program": "train_ddgan.py",
			"console": "integratedTerminal",
			"justMyCode": false,
			"args": [
				"--dataset", "cifar10",
				"--exp", "ddgan_cifar10_exp1",
				"--num_channels", "3",
				"--num_channels_dae", "32",
				"--num_timesteps", "1000",
				"--num_res_blocks", "2",
				"--batch_size", "64",
				"--num_epoch", "1800",
				"--ngf", "64",
				"--nz", "100",
				"--z_emb_dim", "64",
				"--n_mlp", "4",
				"--embedding_type", "positional",
				"--use_ema", 
				"--ema_decay", "0.9999",
				"--r1_gamma", "0.02",
				"--lr_d", "1.25e-4",
				"--lr_g", "1.6e-4",
				"--lazy_reg", "15",
				// "--num_process_per_node", "1",
				"--num_process_per_node", "4",
				"--ch_mult", "1", "2", "2", "2",
				"--save_content",
				"--ddim", "ddim/configs/cifar10.yml",
				"--resume"
			]
		}
	]
}